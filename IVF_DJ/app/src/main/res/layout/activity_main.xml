<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.ivf_dj.feature.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.main.MainActivity">

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/sign_up_for_class_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/classes_list_button"
            app:layout_constraintTop_toTopOf="parent"
            custom:description="sing_up_for_class" />

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/classes_list_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toRightOf="@id/sign_up_for_class_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            custom:description="classes_list" />

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/time_table_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/notice_button"
            app:layout_constraintTop_toBottomOf="@id/sign_up_for_class_button"
            custom:description="time_table" />

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/notice_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toRightOf="@id/time_table_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classes_list_button"
            custom:description="notice" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
