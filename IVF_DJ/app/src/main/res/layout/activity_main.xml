<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.ivf_dj.feature.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.main.MainActivity">

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/lecture_list_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            android:onClick="@{() -> viewModel.onClickLectureList()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/my_lecture_button"
            app:layout_constraintTop_toTopOf="parent"
            custom:description="lecture_list" />

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/my_lecture_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            android:onClick="@{() -> viewModel.onClickMyLecture()}"
            app:layout_constraintLeft_toRightOf="@id/lecture_list_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            custom:description="my_lecture" />

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/time_table_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            android:onClick="@{() -> viewModel.onClickTimeTable()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/notice_button"
            app:layout_constraintTop_toBottomOf="@id/lecture_list_button"
            custom:description="time_table" />

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/notice_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            android:onClick="@{() -> viewModel.onClickNotification()}"
            app:layout_constraintLeft_toRightOf="@id/time_table_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_lecture_button"
            custom:description="notification" />

        <com.example.ivf_dj.core.view.CustomButton
            android:id="@+id/setting_button"
            android:layout_width="@dimen/custom_button_size"
            android:layout_height="@dimen/custom_button_size"
            android:layout_marginTop="24dp"
            android:onClick="@{() -> viewModel.onClickSetting()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/notice_button"
            app:layout_constraintTop_toBottomOf="@id/time_table_button"
            custom:description="settings" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
