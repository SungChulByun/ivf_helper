<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.ivf_dj.feature.lecture.list.addlecture.CalendarDialogViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="@{String.valueOf(viewModel.position + 1)}"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="번째 수업"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <DatePicker
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-55dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="-50dp"
                android:layout_marginBottom="-30dp"
                android:layout_weight="1"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:scaleX="0.771"
                android:scaleY="0.771"
                android:startYear="2020"
                app:calendarDayOfMonth="@{viewModel.calendarDayOfMonth}"
                app:calendarMonthOfYear="@{viewModel.calendarMonthOfYear}"
                app:calendarYear="@{viewModel.calendarYear}"
                app:onDateChanged="@{viewModel}" />

            <TimePicker
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-55dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="-50dp"
                android:layout_marginBottom="-30dp"
                android:layout_weight="1"
                android:scaleX="0.771"
                android:scaleY="0.771"
                android:timePickerMode="spinner"
                app:calendarHourOfDay="@{viewModel.calendarHourOfDay}"
                app:calendarMinute="@{viewModel.calendarMinute}"
                app:onTimeChanged="@{viewModel}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/yes_or_no_dialog_button_bg"
                android:gravity="center"
                android:onClick="@{() -> viewModel.onClickCancelButton()}"
                android:text="취소"
                android:textColor="@color/yes_or_no_dialog_button_text_color"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/yes_or_no_dialog_button_accent_bg"
                android:gravity="center"
                android:onClick="@{() -> viewModel.onClickOKButton()}"
                android:text="설정"
                android:textColor="@color/yes_or_no_dialog_button_accent_text_color"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</layout>
